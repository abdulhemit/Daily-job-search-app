<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PostJobFragment">


    <EditText
        android:id="@+id/isYeriId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:hint="iş yeri adını giriniz "
        android:gravity="center"
        android:textColor="@color/pickColor"
        android:background="@drawable/switch_tumbs3"

        />



    <EditText
        android:id="@+id/isIlaniId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/isYeriId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:hint="iş ilan adını giriniz "
        android:gravity="center"
        android:textColor="@color/pickColor"
        android:background="@drawable/switch_tumbs3"

        />
    <EditText
        android:id="@+id/isFiyatiId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/isIlaniId"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:hint="iş fiyatini giriniz"
        android:gravity="center"
        android:background="@drawable/switch_tumbs3"
        />
    <EditText
        android:id="@+id/isSaatiId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/isFiyatiId"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:hint="çalışacak toplam saati giriniz"
        android:gravity="center"
        android:textColor="@color/pickColor"
        android:background="@drawable/switch_tumbs3"

        />

    <EditText
        android:id="@+id/isAciklamaId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/isSaatiId"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:hint="gereken açıklama "
        android:gravity="center|top"
        android:background="@drawable/switch_tumbs3"
        android:minLines="7"
        android:padding="10dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardviewYayin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/isAciklamaId"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="14dp"

        >
        <TextView
            android:id="@+id/IdYayinla"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Yayınla"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@color/pickColor"
            />
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>