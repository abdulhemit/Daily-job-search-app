<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".HangiKullaniciActivity">

    <LinearLayout
        android:id="@+id/elemanLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/pickColor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Günlük Eleman mı arıyorsun?"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:layout_marginStart="35dp"
           android:layout_marginEnd="35dp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:text="Ücretsin ilan yayınla, aradığın elemanları hemen bul"
           android:textSize="18sp"
           android:gravity="center"
           />

        <TextView
            android:id="@+id/IsAriyorum"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Eleman arıyorum"
            android:textColor="@color/pickColor"
            android:background="@drawable/switch_trcks"
            android:textSize="22sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/ismiAriyorsun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/elemanLinearlayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="90sp"
        android:text="Günlük iş mı arıyorsun?"
        android:textColor="@color/pickColor"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/gulukisibul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Çevren'deki sana uygun günlük işleri bul ve ihtıyacın olanı hemen kazan!"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/ismiAriyorsun"
        />


    <TextView
        android:id="@+id/elemanAriyorum"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_below="@id/gulukisibul"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/switch_tumbs"
        android:gravity="center"
        android:text="Iş Ariyorum"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>