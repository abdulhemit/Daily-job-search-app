<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".fragments.IlanDetayiFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ilanDetayiImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile"
        />
    <TextView
        android:id="@+id/yayinciId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imran hemit"
        app:layout_constraintTop_toBottomOf="@id/ilanDetayiImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        android:textColor="@color/pickColor"
        />
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/yayinciId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/isYeriId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40dp"
            android:padding="10dp"
            android:text="Istanbul'da"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pickColor"
            android:paddingStart="20dp"
            android:background="@drawable/switch_tumbs3"
            />

        <TextView
            android:id="@+id/isIlaniId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40dp"
            android:padding="10dp"
            android:text="otel"
            android:textSize="20sp"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:textColor="@color/pickColor"
            android:background="@drawable/switch_tumbs3"

            />
        <TextView
            android:id="@+id/isFiyatiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40dp"
            android:padding="10dp"
            android:text="250TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pickColor"
            android:paddingStart="20dp"
            android:background="@drawable/switch_tumbs3"
            />

        <TextView
        android:id="@+id/isSaati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:padding="10dp"
        android:text="8 Saat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/pickColor"
        android:paddingStart="20dp"
        android:background="@drawable/switch_tumbs3"
        />

        <TextView
            android:id="@+id/isAciklamaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/switch_tumbs3"
            android:paddingStart="20dp"
            android:text="aciklama"
            android:textSize="20sp"
            android:minLines="4"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/pickColor"
            />

    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:id="@+id/CardviewYayin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="14dp"

        >
        <TextView
            android:id="@+id/idMesajAt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Mesaj at"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@color/pickColor"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardviewSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CardviewYayin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40dp"
        android:visibility="gone"
        app:cardCornerRadius="14dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/ilaniSil"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ilanÄ± sil"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="#F92D09"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>